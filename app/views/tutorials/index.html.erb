<p id="notice"><%= notice %></p>

<h1>Listing Tutorials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.body_html %></td>
        <td><%= tutorial.tag %></td>
      </tr>
      <tr>  
        <div class="btn-group">
        <td><%= link_to 'Show', tutorial, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %></td>
        </div>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

